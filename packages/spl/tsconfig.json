{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",           // Matches NestJS default
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,            // Generate .d.ts files
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",     // Ensures tree-shaking works
    "isolatedModules": true,        // Required for esbuild/tsup
    "noEmit": false                // tsup handles emit, but keep for standalone tsc
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}