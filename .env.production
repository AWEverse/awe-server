# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/awe_production
POSTGRES_DB=awe_production
POSTGRES_USER=awe_user
POSTGRES_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Security
BCRYPT_ROUNDS=14
CSRF_SECRET=your-csrf-secret-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_REGION=auto

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring and Logging
LOG_LEVEL=error,warn
ENABLE_SWAGGER=false
ENABLE_DEBUG=false

# Performance
MAX_FILE_SIZE=10485760
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# Health Check
HEALTH_CHECK_TIMEOUT=5000
DATABASE_TIMEOUT=5000
