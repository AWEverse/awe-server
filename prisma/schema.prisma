  GROUP
  CHANNEL
  COMMUNITY
}

enum ChatRole {
  OWNER
  ADMIN
  MODERATOR
  MEMBER
  SUBSCRIBER
}

enum MessageType {
  SYSTEM
  TEXT
  IMAGE
  VIDEO
  AUDIO
  FILE
  DOCUMENT
  STICKER
  VOICE
  VIDEO_NOTE
  LOCATION
  CONTACT
  POLL
  DICE
  GAME
  EMOJI
  GIF
  MARKDOWN
}

