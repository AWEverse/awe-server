  @@index([type])
  @@index([status])
  @@index([publishedAt])
  @@index([viewsCount])
  @@index([likesCount])
  @@index([createdAt])
  @@index([flags])
  @@index([type, status, publishedAt])
  @@index([authorId, type, status])
